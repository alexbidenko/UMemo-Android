<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/material_white"
        android:layout_margin="8dp"
        android:elevation="1dp"
        android:translationZ="1dp">
        <!--android:background="@drawable/material_white"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/icon_notification"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_notifications_black_24dp" />

            <Button
                android:id="@+id/type_notification"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                style="@style/ButtonClear"
                android:paddingStart="34dp"
                android:text="Уведомление"/>

            <ImageButton
                android:id="@+id/cancel_notification"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignEnd="@+id/type_notification"
                android:layout_marginEnd="0dp"
                app:srcCompat="@android:drawable/ic_delete"
                style="@style/ButtonClear" />

        </RelativeLayout>

        <Button
            android:id="@+id/type_score_notification"
            style="@style/ButtonClear"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:paddingStart="34dp"
            android:text="За время до" />

        <Button
            android:id="@+id/notification_before"
            style="@style/ButtonClear"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:paddingStart="34dp"
            android:text="За 10 мин. до" />

        <Button
            android:id="@+id/period_repeat_event"
            style="@style/ButtonClear"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:paddingStart="34dp"
            android:text="Повторяется?"/>

    </LinearLayout>

</LinearLayout>
